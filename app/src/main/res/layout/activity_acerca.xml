<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/dLayout"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l_ventana">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:background= "#0C6282"
            android:id="@+id/menu"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="16dp"
                android:src="@drawable/regresar"
                android:id="@+id/Btnregresar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tit_acerca"
                android:layout_toRightOf="@id/Btnregresar"
                android:text="@string/title_acerca"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/menu"
            android:layout_marginTop="20dp"
            android:id="@+id/contenedor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_DesarrolladoPor"
                android:text="@string/txt1_acerca"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textColor="#000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/acerca_png"
                android:padding="15dp"
                android:id="@+id/acerca"
                android:layout_below="@id/txt_DesarrolladoPor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_claresTI"
                android:layout_below="@id/acerca"
                android:text="@string/txt2_acerca"
                android:textAlignment="center"
                android:textColor="#000"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>